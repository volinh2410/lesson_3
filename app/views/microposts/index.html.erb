<div class="container">
<p id="notice"><%= notice %></p>

<h1>Microposts</h1>
<div class="row">
<%= search_form_for @q do |f| %>
<div class="input-group mb-3 col-sm-12">
  <input type="search_field" class="form-control col-ml-2" name="value" placeholder="input name or email" aria-label="input name or email" aria-describedby="button-addon2">
  
  <select class="custom-select" name="catelogyValue" id="inputGroupSelect01">
    <option value="" selected>Choose...</option>
    <% @micropostsAll.uniq.each do |micropost| %>
      <option  value="<%=micropost.catelogy.id%>"><%= micropost.catelogy.catelogyName %></option>
    <%end%>
  </select>

  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Seach</button>
  </div>
</div>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
  <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user.name %></td>
        <td><%= micropost.catelogy.catelogyName %></td>
        <td><%= link_to 'Show', micropost, class: "btn btn-primary" %> <%= link_to 'Edit', edit_micropost_path(micropost), class: "btn btn-primary" %> <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @microposts, theme: "twitter-bootstrap-4", pagination_class: "pagination-sm pagination-centered",  nav_class: "d-inline-b"%>
<br>
</div>
<%= link_to 'New Micropost', new_micropost_path, class: "btn btn-primary" %>
</div>