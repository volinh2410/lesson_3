<div class="container">
<p id="notice"><%= notice %></p>

<h1>Microposts</h1>
<div class="row">
<%= search_form_for @q do |f| %>
<div class="input-group mb-3 col-sm-12">
  <input type="search_field" class="form-control col-ml-2" name="value" placeholder="input name or email" aria-label="input name or email" aria-describedby="button-addon2">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Seach</button>
  </div>
</div>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @microposts.each do |micropost| %>
    <%= debug micropost %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= micropost.catelogy_id %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @microposts, theme: "twitter-bootstrap-4", pagination_class: "pagination-sm pagination-centered",  nav_class: "d-inline-b"%>
<br>
</div>
<%= link_to 'New Micropost', new_micropost_path %>
</div>